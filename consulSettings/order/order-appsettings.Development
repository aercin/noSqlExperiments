{
  "MongoDb": {
    "Host": "localhost",
    "Port": "27017",
    "DatabaseName": "NosqlPoc",
    "OrderCollectionName": "Orders",
    "OutboxMessageCollectionName": "OutboxMessages",
    "InboxMessageCollectionName": "InboxMessages"
  },
  "Integration": {
    "Async": {
      "BrokerAddress": "amqp://localhost:5003",
      "Consume": [
        {
          "Queue": "StockResponses",
          "Consumers": [
            {
              "Type": "api.Consumers.StockDecreasedEventConsumer,api",
              "MaxRetry": 3,
              "RetryInterval": 5000
            },
            {
              "Type": "api.Consumers.StockNotDecreasedEventConsumer,api",
              "MaxRetry": 3,
              "RetryInterval": 5000
            }
          ]
        }
      ]
    },
    "Sync": {
      "BasketServiceUrl": "http://localhost:5287/api/v1/baskets?UserId={0}"
    }
  },
  "Vault": {
    "MountPoint": "secret",
    "Path": "order",
    "Address": "http://localhost:8200"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Error",
      "Override": {
        "Microsoft.AspNetCore.HttpLogging.HttpLoggingMiddleware": "Information",
        "application": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level:u3}] <corr-id:{CorrelationId}> <machine-name:{MachineName}> <s:[{SourceContext}]> {Message}{NewLine}{Exception}",
          "path": "Logs/applog-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithCorrelationId"
    ],
    "Properties": {
      "ApplicationName": "NoSqlPoc Order Svc"
    }
  }
}